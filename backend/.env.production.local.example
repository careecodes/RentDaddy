# AWS Configuration for deployment
AWS_ACCOUNT_ID=123456789012  # Your 12-digit AWS account ID
AWS_REGION=us-east-2         # AWS region to deploy to

# Database Configuration
POSTGRES_PORT=5432
POSTGRES_HOST=main-postgres
POSTGRES_USER=appuser
POSTGRES_DB=appdb
POSTGRES_PASSWORD=secure_postgres_password
PG_URL=postgresql://appuser:secure_postgres_password@main-postgres:5432/appdb

# Server Configuration
PORT=8080
DOMAIN_URL=https://app.yourdomain.com
TEMP_DIR=/app/temp

# Frontend Configuration (for cross-service communication)
FRONTEND_PORT=5173

# SMTP Configuration
SMTP_PORT=587
SMTP_ENDPOINT_ADDRESS=email-smtp.us-east-2.amazonaws.com
SMTP_TLS_MODE=starttls
SMTP_FROM=noreply@yourdomain.com
SMTP_TEST_EMAIL=admin@yourdomain.com
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password

# Documenso Integration
# These can be set via environment variables or through the admin UI
DOCUMENSO_HOST=docs.yourdomain.com
DOCUMENSO_PORT=443
DOCUMENSO_API_URL=https://docs.yourdomain.com
DOCUMENSO_PUBLIC_URL=https://docs.yourdomain.com
DOCUMENSO_API_KEY=your_documenso_api_key
DOCUMENSO_WEBHOOK_SECRET=your_documenso_webhook_secret

# Clerk Authentication
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key
CLERK_WEBHOOK=your_clerk_webhook_secret
ADMIN_CLERK_ID=your_admin_clerk_id
VITE_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key

# Admin information
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User
ADMIN_EMAIL=admin@yourdomain.com

# Cron job security
CRON_SECRET_TOKEN=your_secure_random_token

# Application Environment
ENV=production
DEBUG_MODE=false

# OpenAI (if needed)
OPENAI_API_KEY=your_openai_api_key